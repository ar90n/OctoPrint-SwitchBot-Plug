<h3> SwitchBot Settings </h3>
<form class="form-horizontal">
    <div class="cntrol-group">
        <label class="control-label">{{ _('Token') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.switchbot_plug.token">
        </div>
    </div>
    <div class="cntrol-group">
        <label class="control-label">{{ _('Secret') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.switchbot_plug.secret">
        </div>
    </div>
    <div class="cntrol-group">
        <label class="control-label">{{ _('Device ID (BLE MAC)') }}</label>
        <div class="controls">
            <input type="text" class="input-block-level" data-bind="value: settings.plugins.switchbot_plug.device_id">
        </div>
    </div>
</form>
